<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('../partials/head.ejs') %> 
    <title>Men Cologne</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">


</head>
<body>
    <%- include ('../partials/header.ejs') %>

    <div class="container" style="max-width: 960px; margin: auto;">
        <div class="columns is-multiline">
            <% for (let i = 0; i < menCologne.length; i++) { %>
                <% const item = menCologne[i]; %>
    
                <div class="column">
                    <div class="card" style="background-image: url('<%= item.image %>');background-position: center; background-size: contain; background-repeat: no-repeat; background-position: center; padding: 20px; color: black; height: 100%;">
                        <a href="/menCologne/<%= item.id %>" style="text-decoration: none; color: inherit;">
                        <div class="card-content">
                            <div class="media">
                                <div class="media-content">
                                    <p class="title is-4"><%= item.name %></p>
                                    <p class="subtitle is-5">Brand: <%= item.brand %></p>
                                </div>
                            </div>
    
                            <div class="content">
                                <!-- <p>Description: <%= item.description %></p> -->
                                <br><br><br><br><br><br><br><br><br><br><br><br>
                                <p>Size: <%= item.size %></p>
                                <p>Price: $<%= item.price %></p>
                                <a href="/menCologne/<%= item.id %>" class="button is-primary">View Detail</a>
                                <a href="<%= item.link %>" class="button is-link">Visit Website</a>
                                <!-- <form action="/wishList" method="post">
                                    <input type="hidden" name="itemId" value="<%= item._id %>">
                                    <button type="submit" class="button is-primary">Add to Wish List</button>
                                </form> -->
                                <!-- <form method="POST" action="/menCologne/<%= item.id %>?_method=DELETE">
                                    <button class="button is-danger" type="submit">Delete</button>
                                </form> -->
                            </div>
                        </div>
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>


</body>
</html>

<style>
    body{
        background-image: url('http://localhost:3000/photos/MB1.webp');
        /* background-size: 100%; */
    }
    p {
        color: rgb(0, 0, 0); 
    }
    .content{
        font-family: "Raleway", sans-serif;
        font-optical-sizing: auto;
        font-style: normal;
    }
</style>

