<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rifles</title>
    <link rel="stylesheet" href="/public/css/app.css">
</head>
<body>
    <%- include ('../partials/header.ejs') %>

    <h1>You are in Rifles Index Page</h1>
    <div class="container">
        <div class="row">
            <% if (rifles && Array.isArray(rifles)) { %>
                <% for (let i = 0; i < rifles.length; i++) { %>
                    <% const item = rifles[i]; %>
                    <!--Each card -->
                    <div class="col-md-6 mb-4">
                        <a href="/rifle/<%= item._id %>" style="text-decoration: none; color: inherit;">
                        <div class="card" style="background-image: url('<%= item.image %>'); background-size:100%;">
                            <div class="card-body text-black">
                                <h5 class="card-title"><%= item.name %></h5>
                                <p class="card-text">Manufacturer: <%= item.manufacturer %></p>
                                <p class="card-text">Price: $<%= item.price %></p>
                                <p class="card-text">Cartridge: <%= item.catridge %></p>
                                <p class="card-text">Action: <%= item.action %></p>
                                <p class="card-text">Origin: <%= item.origin %></p>
                                <p class="card-text">Year: <%= item.year %></p>
                                <a href="/rifle/<%= item._id %>" class="btn btn-primary">View Details</a>
                                <br>
                                <br>

                                <!-- Add to Cart button-->
                                <form action="/cart" method="post">
                                    <input type="hidden" name="itemId" value="<%= item._id %>">
                                    <button type="submit" class="btn btn-success">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                        </a>
                    </div>
                <% } %>
            <% }%>
                
        </div>
    </div>
</body>
</html>

<style>
    p {
        color: rgb(255, 157, 0);
    }
</style>
