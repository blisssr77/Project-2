<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head.ejs') %>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rifles</title>
    <link rel="stylesheet" href="/public/css/app.css">
</head>
<body>
    <%- include ('../partials/header.ejs') %>

    <h1>You are in Summer Spring Index</h1>
    <div class="container">
        <div class="row">
            <% if (summerSpring && Array.isArray(summerSpring)) { %>
                <% for (let i = 0; i < summerSpring.length; i++) { %>
                    <% const item = summerSpring[i]; %>
                    <!--Each card -->
                    <div class="col-md-4 mb-8">
                        <a href="/summerSpring/<%= summerSpring[i].id %>" style="text-decoration: none; color: inherit;">
                        <div class="card" style="background-image: url('<%= item.image %>'); background: size 100%;">
                            <div class="card-body text-black">
                                <h5 class="card-title"><%= item.name %></h5>
                                <br>
                                <p class="card-text">Brand: <%= item.brand %></p>
                                <p class="card-text">Description: <%= item.description %></p>
                                <p class="card-text">Size: <%= item.size %></p>
                                <p class="card-text">Price: $<%= item.price %></p>
                                <br><br>
                                <a href="/summerSpring/<%= summerSpring[i].id %>" class="btn btn-primary">View Details</a>
                                <br>
                                <br>

                                <!-- Add to Cart button-->
                                <form action="/wishList" method="post">
                                    <input type="hidden" name="itemId" value="<%= item._id %>">
                                     <input type="hidden" name="itemName" value="<%= item.name %>">
                                     <input type="hidden" name="itemBrand" value="<%= item.brand %>">
                                     <input type="hidden" name="itemDescription" value="<%= item.description %>">
                                     <input type="hidden" name="itemSize" value="<%= item.size %>">
                                        <input type="hidden" name="itemPrice" value="<%= item.price %>">
                                    <button type="submit" class="btn btn-success">Add to Wish List</button>
                                </form>
                            </div>
                            <br><br>
                        </div>
                        </a>
                        <br><br>
                    </div>
                <% } %>
            <% }%>
                
        </div>
    </div>
</body>
</html>

<style>
    p {
        color: rgb(255, 157, 0);
    }
</style>
